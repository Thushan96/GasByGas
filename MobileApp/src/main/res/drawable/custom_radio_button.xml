<!-- res/drawable/radio_button_circle.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#70FA26" /> <!-- Circle color when checked -->
            <size android:width="36dp" android:height="36dp" /> <!-- Circle size -->
        </shape>
    </item>
    <!-- Unchecked state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent when unchecked -->
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Border color -->
            <size android:width="36dp" android:height="36dp" /> <!-- Circle size -->
        </shape>
    </item>
</selector>